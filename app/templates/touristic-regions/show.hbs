{{!-- Page to show details of touristic-regions --}}
{{#with-rdfa-context class="container" model=model as |ctx|}}
  <div class="page">
    <h2 class="h2">{{link-to (t "touristic-region overview") "touristic-regions.index"}} &lt; {{t (humanize 'touristic-region details')}}</h2>
    <div class="properties">
      <div class="properties__title">
        {{t (humanize 'touristic-region data')}}
        <dl>
          <dt class="properties__label">{{t "label"}}</dt>
          <dd class="properties__data">{{ctx.get prop="label"}}</dd>
          <dt class="properties__label">{{t "geometry"}}</dt>
          <dd class="properties__data">{{#ctx.get prop="geometry" link-to="geometries.show" as |ctx val|}}{{val.stringRep}}{{/ctx.get}}</dd>
          <dt class="properties__label">{{t "containsLocation"}}</dt>
          <dd class="properties__data">
            {{#ctx.each prop="containsLocation" link-to="locations.show" as |ctx val|}}
              {{val.stringRep}}
            {{/ctx.each}}
          </dd>
        </dl>
      </div>
    </div>
  </div>

  {{!-- Actions to go back to the list-view or edit touristic-region if it's an editable application. --}}
  <div class="actions">
    {{#link-to "touristic-regions" class="button" title="Return to list" tagName='button'}}{{t "< Return to the list"}}{{/link-to}}
    
  </div>
{{/with-rdfa-context}}
