{{!-- Page to show details of addresses --}}
{{#with-rdfa-context class="container" model=model as |ctx|}}
  <div class="page">
    <h2 class="h2">{{link-to (t "address overview") "addresses.index"}} &lt; {{t (humanize 'address details')}}</h2>
    <div class="properties">
      <div class="properties__title">
        {{t (humanize 'address data')}}
        <dl>
          <dt class="properties__label">URI</dt>
          <dd class="properties__data">{{#link-to "addresses.show" model href=model.uri}}{{model.uri}}{{/link-to}}</dd>
          <dt class="properties__label">{{t "houseNumberSuffix"}}</dt> <dd class="properties__data">{{ctx.get prop="houseNumberSuffix"}}</dd>
<dt class="properties__label">{{t "municipality"}}</dt> <dd class="properties__data">
                {{#each model.municipality as |langString|}}
                  <span property={{model.rdfaBindings.municipality}} lang="{{langString.language}}" content="{{langString.content}}">
                    <span class="language-string-set__content">"{{langString.content}}"</span><span class="language-string-set__language">@{{langString.language}}</span>
                  </span>
                {{/each}}
              </dd>
<dt class="properties__label">{{t "houseNumber"}}</dt> <dd class="properties__data">{{ctx.get prop="houseNumber"}}</dd>
<dt class="properties__label">{{t "country"}}</dt> <dd class="properties__data">
                {{#each model.country as |langString|}}
                  <span property={{model.rdfaBindings.country}} lang="{{langString.language}}" content="{{langString.content}}">
                    <span class="language-string-set__content">"{{langString.content}}"</span><span class="language-string-set__language">@{{langString.language}}</span>
                  </span>
                {{/each}}
              </dd>
<dt class="properties__label">{{t "postCode"}}</dt> <dd class="properties__data">{{ctx.get prop="postCode"}}</dd>
<dt class="properties__label">{{t "thoroughfare"}}</dt> <dd class="properties__data">{{ctx.get prop="thoroughfare"}}</dd>
          <dt class="properties__label">{{t "lodging"}}</dt>
          <dd class="properties__data">{{#ctx.get prop="lodging" useUri=true link-to="lodgings.show" as |ctx val|}}{{val.stringRep}}{{/ctx.get}}</dd>
          
        </dl>
      </div>
    </div>
  </div>

  {{!-- Actions to go back to the list-view or edit address if it's an editable application. --}}
  <div class="actions">
    <div class="button-group">
      {{#link-to "addresses" class="button" title="Return to list" tagName='button'}}{{t "< Return to the list"}}{{/link-to}}
      
    </div>
  </div>
{{/with-rdfa-context}}
