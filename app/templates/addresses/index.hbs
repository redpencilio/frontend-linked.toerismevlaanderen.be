{{!-- Page to list addresses --}}
<div class="content">
  <h2 class="h2">{{show-models-link}} &lt; {{t (humanize 'addresses')}}</h2>
  {{#data-table
     content=model
     isLoading=isLoadingModel
     filter=filter
     sort=sort
     page=page
     size=size
     as |table|}}
    {{#table.content as |c|}}
      {{#c.header}}
        {{th-sortable field='adminUnitLevel1' currentSorting=sort label=(t 'adminUnitLevel1')}}
{{th-sortable field='adminUnitLevel2' currentSorting=sort label=(t 'adminUnitLevel2')}}
{{th-sortable field='addressArea' currentSorting=sort label=(t 'addressArea')}}
{{th-sortable field='houseNumberSuffix' currentSorting=sort label=(t 'houseNumberSuffix')}}
{{th-sortable field='municipality' currentSorting=sort label=(t 'municipality')}}
{{th-sortable field='houseNumber' currentSorting=sort label=(t 'houseNumber')}}
{{th-sortable field='country' currentSorting=sort label=(t 'country')}}
{{th-sortable field='locatorDesignator' currentSorting=sort label=(t 'locatorDesignator')}}
{{th-sortable field='locatorName' currentSorting=sort label=(t 'locatorName')}}
{{th-sortable field='poBox' currentSorting=sort label=(t 'poBox')}}
{{th-sortable field='postCode' currentSorting=sort label=(t 'postCode')}}
{{th-sortable field='postName' currentSorting=sort label=(t 'postName')}}
{{th-sortable field='thoroughfare' currentSorting=sort label=(t 'thoroughfare')}}
{{th-sortable field='references' currentSorting=sort label=(t 'references')}}
{{th-sortable field='fullAddress' currentSorting=sort label=(t 'fullAddress')}}
        
        <th>{{!-- contains detail view action --}}</th>
        <th>{{!-- contains detail edit action --}}</th>
      {{/c.header}}
      {{#c.body as |row|}}
        <td about={{row.uri}} typeof={{row.rdfaBindings.class}}>
              {{#each row.adminUnitLevel1 as |langString|}}
                <span property={{row.rdfaBindings.adminUnitLevel1}} lang="{{langString.language}}" content="{{langString.content}}">
                  <span class="language-string-set__content">"{{langString.content}}"</span><span class="language-string-set__language">@{{langString.language}}</span>
                </span>
              {{/each}} </td>
<td about={{row.uri}} typeof={{row.rdfaBindings.class}}>
              {{#each row.adminUnitLevel2 as |langString|}}
                <span property={{row.rdfaBindings.adminUnitLevel2}} lang="{{langString.language}}" content="{{langString.content}}">
                  <span class="language-string-set__content">"{{langString.content}}"</span><span class="language-string-set__language">@{{langString.language}}</span>
                </span>
              {{/each}} </td>
<td about={{row.uri}} typeof={{row.rdfaBindings.class}}>
              {{#each row.addressArea as |langString|}}
                <span property={{row.rdfaBindings.addressArea}} lang="{{langString.language}}" content="{{langString.content}}">
                  <span class="language-string-set__content">"{{langString.content}}"</span><span class="language-string-set__language">@{{langString.language}}</span>
                </span>
              {{/each}} </td>
<td about={{row.uri}} typeof={{row.rdfaBindings.class}} property={{row.rdfaBindings.houseNumberSuffix}}>{{row.houseNumberSuffix}}</td>
<td about={{row.uri}} typeof={{row.rdfaBindings.class}}>
              {{#each row.municipality as |langString|}}
                <span property={{row.rdfaBindings.municipality}} lang="{{langString.language}}" content="{{langString.content}}">
                  <span class="language-string-set__content">"{{langString.content}}"</span><span class="language-string-set__language">@{{langString.language}}</span>
                </span>
              {{/each}} </td>
<td about={{row.uri}} typeof={{row.rdfaBindings.class}} property={{row.rdfaBindings.houseNumber}}>{{row.houseNumber}}</td>
<td about={{row.uri}} typeof={{row.rdfaBindings.class}}>
              {{#each row.country as |langString|}}
                <span property={{row.rdfaBindings.country}} lang="{{langString.language}}" content="{{langString.content}}">
                  <span class="language-string-set__content">"{{langString.content}}"</span><span class="language-string-set__language">@{{langString.language}}</span>
                </span>
              {{/each}} </td>
<td about={{row.uri}} typeof={{row.rdfaBindings.class}} property={{row.rdfaBindings.locatorDesignator}}>{{row.locatorDesignator}}</td>
<td about={{row.uri}} typeof={{row.rdfaBindings.class}}>
              {{#each row.locatorName as |langString|}}
                <span property={{row.rdfaBindings.locatorName}} lang="{{langString.language}}" content="{{langString.content}}">
                  <span class="language-string-set__content">"{{langString.content}}"</span><span class="language-string-set__language">@{{langString.language}}</span>
                </span>
              {{/each}} </td>
<td about={{row.uri}} typeof={{row.rdfaBindings.class}} property={{row.rdfaBindings.poBox}}>{{row.poBox}}</td>
<td about={{row.uri}} typeof={{row.rdfaBindings.class}} property={{row.rdfaBindings.postCode}}>{{row.postCode}}</td>
<td about={{row.uri}} typeof={{row.rdfaBindings.class}} property={{row.rdfaBindings.postName}}>{{row.postName}}</td>
<td about={{row.uri}} typeof={{row.rdfaBindings.class}} property={{row.rdfaBindings.thoroughfare}}>{{row.thoroughfare}}</td>
<td about={{row.uri}} typeof={{row.rdfaBindings.class}} property={{row.rdfaBindings.references}}>{{row.references}}</td>
<td about={{row.uri}} typeof={{row.rdfaBindings.class}}>
              {{#each row.fullAddress as |langString|}}
                <span property={{row.rdfaBindings.fullAddress}} lang="{{langString.language}}" content="{{langString.content}}">
                  <span class="language-string-set__content">"{{langString.content}}"</span><span class="language-string-set__language">@{{langString.language}}</span>
                </span>
              {{/each}} </td>
        
        <td>{{link-to (t 'Open') 'addresses.show' row}}</td>
        
      {{/c.body}}
    {{/table.content}}
  {{/data-table}}

  
</div>
