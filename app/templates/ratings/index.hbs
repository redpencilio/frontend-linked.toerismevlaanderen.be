{{!-- Page to list ratings --}}
<div class="content">
  <h2 class="h2">{{show-models-link}} &lt; {{t (humanize 'ratings')}}</h2>
  {{#data-table
     content=model
     isLoading=isLoadingModel
     filter=filter
     sort=sort
     page=page
     size=size
     as |table|}}
    {{#table.content as |c|}}
      {{#c.header}}
        {{th-sortable field='ratingValue' currentSorting=sort label=(t 'ratingValue')}}
{{th-sortable field='description' currentSorting=sort label=(t 'description')}}
{{th-sortable field='bestRating' currentSorting=sort label=(t 'bestRating')}}
{{th-sortable field='worstRating' currentSorting=sort label=(t 'worstRating')}}
{{th-sortable field='issuedDate' currentSorting=sort label=(t 'issuedDate')}}
        {{th-sortable field='author' currentSorting=sort label=(t 'author')}}
        <th>{{!-- contains detail view action --}}</th>
        <th>{{!-- contains detail edit action --}}</th>
      {{/c.header}}
      {{#c.body as |row|}}
        {{#with-rdfa-context tagName="td" model=row as |ctx|}}{{ctx.get prop=ratingValue}}{{/with-rdfa-context}}
{{#with-rdfa-context tagName="td" model=row as |ctx|}}
                {{#each row.description as |langString|}}
                  <span property={{row.rdfaBindings.description}} lang="{{langString.language}}" content="{{langString.content}}">
                    <span class="language-string-set__content">"{{langString.content}}"</span><span class="language-string-set__language">@{{langString.language}}</span>
                  </span>
                {{/each}} {{/with-rdfa-context}}
{{#with-rdfa-context tagName="td" model=row as |ctx|}}{{ctx.get prop=bestRating}}{{/with-rdfa-context}}
{{#with-rdfa-context tagName="td" model=row as |ctx|}}{{ctx.get prop=worstRating}}{{/with-rdfa-context}}
{{#with-rdfa-context tagName="td" model=row as |ctx|}}{{ctx.get prop=issuedDate}}{{/with-rdfa-context}}
                {{#with-rdfa-context tagName="td" model=row as |ctx|}}
                  {{#ctx.get prop="author" useUri=true link-to="registered-organizations.show" as |ctx val|}}{{val.stringRep}}{{/ctx.get}}
                {{/with-rdfa-context}}
                {{#with-rdfa-context tagName="td" model=row as |ctx|}}{{#rdfa/link-to link-to='ratings.show' value=row property="foaf:page"}}{{t "Open"}}{{/rdfa/link-to}}{{/with-rdfa-context}}
        
      {{/c.body}}
    {{/table.content}}
  {{/data-table}}

  
</div>
