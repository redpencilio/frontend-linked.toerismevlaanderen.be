{{!-- Page to show details of rental-units --}}
{{#with-rdfa-context class="container" model=model as |ctx|}}
  <div class="page">
    <h2 class="h2">{{link-to (t "rental-unit overview") "rental-units.index"}} &lt; {{t (humanize 'rental-unit details')}}</h2>
    <div class="properties">
      <div class="properties__title">
        {{t (humanize 'rental-unit data')}}
        <dl>
          <dt class="properties__label">URI</dt>
          <dd class="properties__data">{{#link-to "rental-units.show" model href=model.uri}}{{model.uri}}{{/link-to}}</dd>
          
          
          <dt class="properties__label">{{t "lodgings"}}</dt>
          <dd class="properties__data">
            {{#ctx.each prop="lodgings" useUri=true link-to="lodgings.show" as |ctx val|}}
              {{val.stringRep}}
            {{/ctx.each}}
          </dd>
        </dl>
      </div>
    </div>
  </div>

  {{!-- Actions to go back to the list-view or edit rental-unit if it's an editable application. --}}
  <div class="actions">
    {{#link-to "rental-units" class="button" title="Return to list" tagName='button'}}{{t "< Return to the list"}}{{/link-to}}
    
  </div>
{{/with-rdfa-context}}
