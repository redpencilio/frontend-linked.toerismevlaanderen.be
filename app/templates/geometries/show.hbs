{{!-- Page to show details of geometries --}}
{{#with-rdfa-context class="container" model=model as |ctx|}}
  <div class="page">
    <h2 class="h2">{{link-to (t "geometry overview") "geometries.index"}} &lt; {{t (humanize 'geometry details')}}</h2>
    <div class="properties">
      <div class="properties__title">
        {{t (humanize 'geometry data')}}
        <dl>
          <dt class="properties__label">{{t "asGml"}}</dt> <dd class="properties__data">{{ctx.get prop="asGml"}}</dd>
<dt class="properties__label">{{t "asWkt"}}</dt> <dd class="properties__data">{{ctx.get prop="asWkt"}}</dd>
          
          
        </dl>
      </div>
    </div>
  </div>

  {{!-- Actions to go back to the list-view or edit geometry if it's an editable application. --}}
  <div class="actions">
    {{#link-to "geometries" class="button" title="Return to list" tagName='button'}}{{t "< Return to the list"}}{{/link-to}}
    
  </div>
{{/with-rdfa-context}}
