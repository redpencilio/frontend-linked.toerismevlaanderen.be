{{!-- Page to show details of quantitative-values --}}
{{#with-rdfa-context class="container" model=model as |ctx|}}
  <div class="page">
    <h2 class="h2">{{link-to (t "quantitative-value overview") "quantitative-values.index"}} &lt; {{t (humanize 'quantitative-value details')}}</h2>
    <div class="properties">
      <div class="properties__title">
        {{t (humanize 'quantitative-value data')}}
        <dl>
          <dt class="properties__label">{{t "unit"}}</dt>
          <dd class="properties__data">{{ctx.get prop="unit"}}</dd>
<dt class="properties__label">{{t "value"}}</dt>
          <dd class="properties__data">{{ctx.get prop="value"}}</dd>
          <dt class="properties__label">{{t "standardizedUnit"}}</dt>
          <dd class="properties__data">{{#ctx.get prop="standardizedUnit" link-to="standardized-units.show" as |ctx val|}}{{val.stringRep}}{{/ctx.get}}</dd>
          
        </dl>
      </div>
    </div>
  </div>

  {{!-- Actions to go back to the list-view or edit quantitative-value if it's an editable application. --}}
  <div class="actions">
    {{#link-to "quantitative-values" class="button" title="Return to list" tagName='button'}}{{t "< Return to the list"}}{{/link-to}}
    
  </div>
{{/with-rdfa-context}}
