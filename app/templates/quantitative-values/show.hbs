{{!-- Page to show details of quantitative-values --}}
{{#with-rdfa-context class="container" model=model as |ctx|}}
  <div class="page">
    <h2 class="h2">{{link-to (t "quantitative-value overview") "quantitative-values.index"}} &lt; {{t (humanize 'quantitative-value details')}}</h2>
    <div class="properties">
      <div class="properties__title">
        {{t (humanize 'quantitative-value data')}}
        <dl>
          <dt class="properties__label">URI</dt>
          <dd class="properties__data">{{#link-to "quantitative-values.show" model href=model.uri}}{{model.uri}}{{/link-to}}</dd>
          <dt class="properties__label">{{t "unit"}}</dt> <dd class="properties__data">
                {{#each model.unit as |langString|}}
                  <span property={{model.rdfaBindings.unit}} lang="{{langString.language}}" content="{{langString.content}}">
                    <span class="language-string-set__content">"{{langString.content}}"</span><span class="language-string-set__language">@{{langString.language}}</span>
                  </span>
                {{/each}}
              </dd>
<dt class="properties__label">{{t "value"}}</dt> <dd class="properties__data">{{ctx.get prop="value"}}</dd>
          <dt class="properties__label">{{t "isCapacityOf"}}</dt>
          <dd class="properties__data">{{#ctx.get prop="isCapacityOf" useUri=true link-to="lodgings.show" as |ctx val|}}{{val.stringRep}}{{/ctx.get}}</dd>
          
        </dl>
      </div>
    </div>
  </div>

  {{!-- Actions to go back to the list-view or edit quantitative-value if it's an editable application. --}}
  <div class="actions">
    {{#link-to "quantitative-values" class="button" title="Return to list" tagName='button'}}{{t "< Return to the list"}}{{/link-to}}
    
  </div>
{{/with-rdfa-context}}
