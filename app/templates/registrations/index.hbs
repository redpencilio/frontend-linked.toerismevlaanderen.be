{{!-- Page to list registrations --}}
<div class="content">
  <h2 class="h2">{{show-models-link}} &lt; {{t (humanize 'registrations')}}</h2>
  {{#data-table
     content=model
     isLoading=isLoadingModel
     filter=filter
     sort=sort
     page=page
     size=size
     as |table|}}
    {{#table.content as |c|}}
      {{#c.header}}
        {{th-sortable field='identifier' currentSorting=sort label=(t 'identifier')}}
{{th-sortable field='registrationStatus' currentSorting=sort label=(t 'registrationStatus')}}
{{th-sortable field='type' currentSorting=sort label=(t 'type')}}
{{th-sortable field='category' currentSorting=sort label=(t 'category')}}
{{th-sortable field='lodging' currentSorting=sort label=(t 'lodging')}}
{{th-sortable field='responsibleOrganization' currentSorting=sort label=(t 'responsibleOrganization')}}
        {{th-sortable field='issuedDate' currentSorting=sort label=(t 'issuedDate')}}
        <th>{{!-- contains detail view action --}}</th>

      {{/c.header}}
      {{#c.body as |row|}}
                {{#with-rdfa-context tagName="td" model=row as |ctx|}}
                  {{#ctx.get prop="identifier" useUri=true link-to="identifiers.show" as |ctx val|}}{{val.stringRep}}{{/ctx.get}}
                {{/with-rdfa-context}}
{{#with-rdfa-context tagName="td" model=row as |ctx|}}
                  {{#ctx.get prop="registrationStatus" useUri=true link-to="concepts.show" as |ctx val|}}{{val.stringRep}}{{/ctx.get}}
                {{/with-rdfa-context}}
{{#with-rdfa-context tagName="td" model=row as |ctx|}}
                  {{#ctx.get prop="type" useUri=true link-to="concepts.show" as |ctx val|}}{{val.stringRep}}{{/ctx.get}}
                {{/with-rdfa-context}}
{{#with-rdfa-context tagName="td" model=row as |ctx|}}
                  {{#ctx.get prop="category" useUri=true link-to="concepts.show" as |ctx val|}}{{val.stringRep}}{{/ctx.get}}
                {{/with-rdfa-context}}
{{#with-rdfa-context tagName="td" model=row as |ctx|}}
                  {{#ctx.get prop="lodging" useUri=true link-to="lodgings.show" as |ctx val|}}{{val.stringRep}}{{/ctx.get}}
                {{/with-rdfa-context}}
{{#with-rdfa-context tagName="td" model=row as |ctx|}}
                  {{#ctx.get prop="responsibleOrganization" useUri=true link-to="registered-organizations.show" as |ctx val|}}{{val.stringRep}}{{/ctx.get}}
                {{/with-rdfa-context}}
                {{#with-rdfa-context tagName="td" model=row as |ctx|}}
                  {{#ctx.get prop="issuedDate" as |ctx val|}}{{val}}{{/ctx.get}}
                {{/with-rdfa-context}}
                {{#with-rdfa-context tagName="td" model=row as |ctx|}}{{#rdfa/link-to link-to='registrations.show' value=row property="foaf:page"}}{{t "Open"}}{{/rdfa/link-to}}{{/with-rdfa-context}}

      {{/c.body}}
    {{/table.content}}
  {{/data-table}}


</div>
