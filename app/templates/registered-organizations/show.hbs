{{!-- Page to show details of registered-organizations --}}
{{#with-rdfa-context class="container" model=model as |ctx|}}
  <div class="page">
    <h2 class="h2">{{link-to (t "registered-organization overview") "registered-organizations.index"}} &lt; {{t (humanize 'registered-organization details')}}</h2>
    <div class="properties">
      <div class="properties__title">
        {{t (humanize 'registered-organization data')}}
        <dl>
          <dt class="properties__label">URI</dt>
          <dd class="properties__data">{{#link-to "registered-organizations.show" model href=model.uri}}{{model.uri}}{{/link-to}}</dd>
          <dt class="properties__label">{{t "legalName"}}</dt> <dd class="properties__data">
                {{#each model.legalName as |langString|}}
                  <span property={{model.rdfaBindings.legalName}} lang="{{langString.language}}" content="{{langString.content}}">
                    <span class="language-string-set__content">"{{langString.content}}"</span><span class="language-string-set__language">@{{langString.language}}</span>
                  </span>
                {{/each}}
              </dd>
          <dt class="properties__label">{{t "registration"}}</dt>
          <dd class="properties__data">{{#ctx.get prop="registration" useUri=true link-to="registrations.show" as |ctx val|}}{{val.stringRep}}{{/ctx.get}}</dd>
          <dt class="properties__label">{{t "authoredRatings"}}</dt>
          <dd class="properties__data">
            {{#ctx.each prop="authoredRatings" useUri=true link-to="ratings.show" as |ctx val|}}
              {{val.stringRep}}
            {{/ctx.each}}
          </dd>
<dt class="properties__label">{{t "authoredQualityLabels"}}</dt>
          <dd class="properties__data">
            {{#ctx.each prop="authoredQualityLabels" useUri=true link-to="quality-labels.show" as |ctx val|}}
              {{val.stringRep}}
            {{/ctx.each}}
          </dd>
        </dl>
      </div>
    </div>
  </div>

  {{!-- Actions to go back to the list-view or edit registered-organization if it's an editable application. --}}
  <div class="actions">
    {{#link-to "registered-organizations" class="button" title="Return to list" tagName='button'}}{{t "< Return to the list"}}{{/link-to}}
    
  </div>
{{/with-rdfa-context}}
